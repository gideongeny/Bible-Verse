<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BibleVerse" parent="Base.Theme.BibleVerse">

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="colorPrimary">@color/m3_primary</item>
        <item name="colorOnPrimary">@color/m3_on_primary</item>
        <item name="colorPrimaryContainer">@color/m3_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/m3_on_primary_container</item>
        <item name="colorSecondary">@color/m3_secondary</item>
        <item name="colorOnSecondary">@color/m3_on_secondary</item>
        <item name="colorSecondaryContainer">@color/m3_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/m3_on_secondary_container</item>
        <item name="android:colorBackground">@color/m3_surface</item>
        <item name="colorSurface">@color/m3_surface</item>
        <item name="colorOnSurface">@color/m3_on_surface</item>
        <item name="colorSurfaceVariant">@color/m3_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/m3_on_surface_variant</item>
        <item name="colorError">@color/m3_error</item>
        <item name="colorOnError">@color/m3_on_error</item>

        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@anim/fade_in</item>
        <item name="android:windowExitTransition">@anim/fade_out</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/windowBackgroundLM</item>
    </style>

    <style name="Toolbar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primaryText</item>
    </style>


    <style name="Widget.AppCompat.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/primaryColor</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/primaryLightColor</item>
    </style>

    <style name="AppActionBarTitle" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <!-- BottomSheet style -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:backgroundTint">@color/windowBackgroundLM</item>
    </style>

    <style name="Base.Theme.BibleVerse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

</resources>
